<Window x:Class="PL.Product.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Product"
        mc:Ignorable="d"
         Title="ProductWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbId" HorizontalAlignment="Left" Margin="280,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="CategorySelector" HorizontalAlignment="Left" Margin="280,134,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblId" Content="Id:" HorizontalAlignment="Left" Margin="153,91,0,0" VerticalAlignment="Top" Height="28" Width="83"/>
        <Label x:Name="lblCategory" Content="Category: " HorizontalAlignment="Left" Margin="153,138,0,0" VerticalAlignment="Top" Height="28" Width="83"/>
        <Label x:Name="lblName" Content="Name: " HorizontalAlignment="Left" Margin="153,199,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.005,-0.146"/>
        <Label x:Name="lblPrice" Content="Price: " HorizontalAlignment="Left" Margin="153,263,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblInStock" Content="InStock: " HorizontalAlignment="Left" Margin="152,315,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Margin="281,203,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbPrice" HorizontalAlignment="Left" Margin="283,268,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbInStock" HorizontalAlignment="Left" Margin="285,319,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAddProduct" Content="Add" HorizontalAlignment="Left" Margin="672,376,0,0" VerticalAlignment="Top" Click="btnAddProduct_Click"/>
        <Button x:Name="btnUpdateProduct" Content="Update" HorizontalAlignment="Left" Margin="140,376,0,0" VerticalAlignment="Top" Click="UpdateProduct_Click"/>

    </Grid>
</Window>
