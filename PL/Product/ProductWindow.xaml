<Window x:Class="PL.Product.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Product"
        mc:Ignorable="d"
         Title="ProductWindow" Height="450" Width="800">
    <Grid Background="#FFFCEFEC">
        <TextBox x:Name="tbId" HorizontalAlignment="Left" Margin="280,60,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="30" Background="#FFFFF4F4" TextChanged="tbId_TextChanged"/>
        <ComboBox x:Name="CategorySelector" HorizontalAlignment="Left" Margin="280,134,0,0" VerticalAlignment="Top" Width="150" Height="30" BorderBrush="#FF9B0101" Foreground="#FFAE5151" SelectionChanged="CategorySelector_SelectionChanged">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="#FFFFF2F2" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Label x:Name="lblId" Content="Id:" HorizontalAlignment="Left" Margin="150,60,0,0" VerticalAlignment="Top" Height="28" Width="83" FontFamily="Gill Sans Ultra Bold" Foreground="#FFA86A68" FontSize="16"/>
        <Label x:Name="lblCategory" Content="Category: " HorizontalAlignment="Left" Margin="150,129,0,0" VerticalAlignment="Top" Height="44" Width="111" FontFamily="Gill Sans Ultra Bold" FontSize="16" Foreground="#FFA86A68"/>
        <Label x:Name="lblName" Content="Name: " HorizontalAlignment="Left" Margin="153,187,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.005,-0.146" FontFamily="Gill Sans Ultra Bold" Foreground="#FFA86A68" FontSize="16"/>
        <Label x:Name="lblPrice" Content="Price: " HorizontalAlignment="Left" Margin="150,263,0,0" VerticalAlignment="Top" Foreground="#FFA86A68" FontFamily="Gill Sans Ultra Bold" FontSize="16"/>
        <Label x:Name="lblInStock" Content="InStock: " HorizontalAlignment="Left" Margin="150,339,0,0" VerticalAlignment="Top" Foreground="#FFA86A68" FontSize="16" FontFamily="Gill Sans Ultra Bold"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Margin="280,196,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="30" Background="#FFFFF4F4" TextChanged="tbName_TextChanged"/>
        <TextBox x:Name="tbPrice" HorizontalAlignment="Left" Margin="280,263,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="30" Background="#FFFFF4F4" TextChanged="tbPrice_TextChanged"/>
        <TextBox x:Name="tbInStock" HorizontalAlignment="Left" Margin="280,339,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="150" Height="30" Background="#FFFFF4F4" TextChanged="tbInStock_TextChanged"/>
        <Button x:Name="btnAdd_UpdateProduct" Content="Add" HorizontalAlignment="Left" Margin="677,345,0,0" VerticalAlignment="Top" Click="btnAdd_UpdateProduct_Click" FontFamily="Gill Sans Ultra Bold" FontSize="20" Height="48" Width="80" Background="#FFFADFDF" BorderBrush="#FFFA8989" Foreground="#FFA86A68"/>
        <Label x:Name="lblWrongId" Content="" HorizontalAlignment="Left" Margin="280,95,0,0" VerticalAlignment="Top" Height="30" Width="150" Foreground="#FFD42D2D"/>
        <Label x:Name="lblWrongInStock" Content="" HorizontalAlignment="Left" Margin="280,378,0,0" VerticalAlignment="Top" Height="31" Width="150" Foreground="#FFD42D2D"/>
        <Label x:Name="lblWrongName" Content="" HorizontalAlignment="Left" Margin="280,231,0,0" VerticalAlignment="Top" Height="26" Width="150" Foreground="#FFD42D2D"/>
        <Label x:Name="lblWrongPrice" Content="" HorizontalAlignment="Left" Margin="280,298,0,0" VerticalAlignment="Top" Height="32" Width="150" Foreground="#FFD42D2D"/>
        <Label x:Name="lblMissingCategory" Content="" HorizontalAlignment="Left" Margin="280,164,0,0" VerticalAlignment="Top" Height="32" Width="150" Foreground="#FFD42D2D"/>

    </Grid>
</Window>
